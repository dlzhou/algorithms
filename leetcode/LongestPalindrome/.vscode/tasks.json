{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceFolder:LongestPalindrome}/build"
    },
    "tasks": [
        {
            "label": "cmake",
            "args": [
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "label": "make",
            "args": [
                "make -j 8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}